generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        String   @id @default(uuid())
  name      String
  address   String
  photo     String
  openingHour String // verificar se deve separar em dois campos
  closingHour String //
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products  RestaurantProduct[]
}

model RestaurantProduct {
  id           String   @id @default(uuid())
  name         String
  price        Float
  photo        String
  category     Category
  restaurantId String
  Restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  sales        RestaurantProductSale[]
}

model RestaurantProductSale {
  id               String   @id @default(uuid())
  saleDescription    String
  salePrice         Float
  saleDays          SaleDays
  saleHours         String
  restaurantProductId String
  RestaurantProduct RestaurantProduct @relation(fields: [restaurantProductId], references: [id])
}

enum Category {
  Starter
  Main
  Dessert
  Drink
  Other
}

enum SaleDays {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
}

